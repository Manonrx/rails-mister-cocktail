<div class="container">
  <div class="card"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @cocktail.photo, height: 100, width: 400, crop: :fill %>')">
    <div class="card-body">
      <h5 class="card-title"><%= @cocktail.name %></h5>
      <% @cocktail.doses.each do |dose| %>
      <p class="card-text">
        <%=  dose.ingredient.name %> <i><%=  dose.description %></i>
        <%= link_to "- delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      </p>
      <p class="card-text"><small class="text-muted"><%= link_to "+ Add a dose", new_cocktail_dose_path(@cocktail) %></small></p>
    </div>
  </div>
  <div class="row">
    <p><%= link_to "Back to list", root_path %></p>
  </div>

</div>

